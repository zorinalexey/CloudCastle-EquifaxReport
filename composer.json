{
  "name": "cloud-castle/equifax-report",
  "description": "Библиотека для генерации xml файлов кредитных отчетов для БКИ Equifax",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "CloudCastle\\EquifaxReport\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Алексей Зорин",
      "email": "zorinalexey59292@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.4",
    "ext-xml": "*",
    "ext-xmlwriter": "*"
  },
  "post-package-install": [
    "php -r \"chmod('src/Bin/postInstallCmd.sh', 0777);\"",
    "php -r \"exec('src/Bin/postInstallCmd.sh');\""
  ]
}
